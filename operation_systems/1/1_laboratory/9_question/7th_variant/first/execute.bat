@echo off

:: Укажите диск, на котором нужно выполнить поиск (например, C:\)
set disk=C:\

:: Найти все DLL файлы, созданные до 12.2021 и размером до 12000 байт
for /r %disk% %%F in (*.dll) do (
    for %%T in (%%F) do (
        :: Получаем дату создания файла в формате YYYYMMDD
        set fileDate=%%~tF
        set fileDate=!fileDate:~6,4!!fileDate:~3,2!!fileDate:~0,2!

        :: Проверяем, создан ли файл до 12.2021 (т.е. до 20211201)
        if !fileDate! lss 20211201 (
            :: Проверяем, если размер файла меньше 12000 байт
            if %%~zF lss 12000 (
                echo %%F
            )
        )
    )
)

pause
